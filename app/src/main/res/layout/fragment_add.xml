<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddFragment"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_margin="60dp"
        >


        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_expense_fragment"
            android:gravity="center" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/expense_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/expense_name_fragment"
            />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/expense_cost_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_much_fragment"/>

        <Spinner
            android:layout_margin="5dp"
            android:id="@+id/add_expense_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        </Spinner>

        <Button
            android:id="@+id/add_expense_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense_button_fragment"/>


    </LinearLayout>


</LinearLayout>